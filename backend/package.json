{
  "name": "truckingsemis-backend",
  "version": "1.0.0",
  "description": "Backend for TruckingSemis weight management system",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server-fastify.mjs",
    "start:express": "node server.js",
    "dev": "nodemon server-fastify.mjs",
    "dev:express": "nodemon server.js",
    "lint": "eslint .",
    "lint:check": "eslint \"**/*.{js,ts}\" --ignore-pattern \"node_modules/**\" --ignore-pattern \"generated/**\" --ignore-pattern \"prisma/**\"",
    "lint:fix": "eslint \"**/*.{js,ts}\" --fix --ignore-pattern \"node_modules/**\" --ignore-pattern \"generated/**\" --ignore-pattern \"prisma/**\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:fix": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "lint:all": "npm run lint:fix && npm run format:fix",
    "test": "jest"
  },
  "dependencies": {
    "@fastify/compress": "^6.5.0",
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^10.1.1",
    "@fastify/multipart": "^8.3.1",
    "@fastify/rate-limit": "^8.0.3",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/websocket": "^11.0.2",
    "@prisma/client": "^6.7.0",
    "@supabase/supabase-js": "^2.49.4",
    "axios": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.5.0",
    "exceljs": "^4.4.0",
    "fastify": "^4.29.1",
    "fastify-plugin": "^4.5.1",
    "lru-cache": "^11.1.0",
    "node-cron": "^3.0.3",
    "paseto": "^3.1.4",
    "pdfkit": "^0.14.0",
    "pg": "^8.15.6",
    "prom-client": "^15.1.0",
    "tiny-lru": "^11.2.11",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.17.46",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "prisma": "^6.7.0",
    "prisma-generator-plantuml-erd": "^1.6.0",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "glob": "^9.3.5"
  },
  "engines": {
    "node": ">=20.0.0 <21.0.0",
    "npm": ">=10.0.0"
  }
}
