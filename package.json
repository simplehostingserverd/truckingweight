{
  "name": "truckingsemis",
  "version": "1.0.0",
  "description": "A modern web-based application for trucking companies to manage weight checking and load management.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "push-schema": "node scripts/push-schema.js",
    "update-schema": "node scripts/update-schema.js",
    "update-deps": "node scripts/update-dependencies.js",
    "dev": "concurrently \"cd frontend && npm run dev\" \"cd backend && npm run dev\"",
    "install-deps": "node scripts/install-deps.js",
    "prepare": "husky install || echo 'Skipping husky install'",
    "lint": "eslint . || echo 'Skipping eslint'",
    "lint:fix": "eslint --fix . || echo 'Skipping eslint fix'",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,css}\" || echo 'Skipping prettier'",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,css}\" || echo 'Skipping prettier check'",
    "postinstall": "npm run prepare || true",
    "setup-db": "node scripts/setup-database.js",
    "create-admin": "node scripts/create-admin.js",
    "reset-db": "node --experimental-modules scripts/reset-database.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.7",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "mapbox-gl": "^3.12.0",
    "next": "^15.3.2",
    "pg": "^8.11.3",
    "tailwindcss-animate": "^1.0.7"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simplehostingsolutions/truckingsemis.git"
  },
  "keywords": [
    "trucking",
    "weight-management",
    "logistics"
  ],
  "author": "simplehostingsolutions",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/simplehostingsolutions/truckingsemis/issues"
  },
  "homepage": "https://github.com/simplehostingsolutions/truckingsemis#readme",
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  }
}
