{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/components/ui/badge": ["./src/components/ui/Badge"],
      "@/components/ui/button": ["./src/components/ui/Button"],
      "@/components/ui/input": ["./src/components/ui/Input"],
      "@/components/ui/select": ["./src/components/ui/Select"],
      "@/components/ui/tabs": ["./src/components/ui/Tabs"],
      "@/components/ui/card": ["./src/components/ui/Card"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
