# NPM Configuration for optimized builds
# Reduces disk usage and improves build reliability

registry=https://registry.npmjs.org/
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000
fetch-retries=3
no-audit=true
no-fund=true
prefer-offline=true
engine-strict=false
optional=false

# Cache settings
cache-max=86400000
cache-min=10

# Progress and logging
progress=false
loglevel=warn

# Security
strict-ssl=true